{
  "env": [{
    "type": "confirm",
    "name": "GULP",
    "message": "Enable Gulp:"
  }, {
    "type": "confirm",
    "name": "GULP_WATCHER",
    "message": "Enable the Gulp watcher:",
    "default": false,
    "when": "GULP=true"
  }, {
    "type": "confirm",
    "name": "GULP_OUTPUT",
    "message": "Display the detailled Gulp logs:",
    "default": false,
    "when": "GULP=true"
  }, {
    "type": "confirm",
    "name": "GULP_CLEAN_DEST",
    "message": "Clean the Gulp destination folders at start:",
    "default": false,
    "when": "GULP=true"
  }]
}
